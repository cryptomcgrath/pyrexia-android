<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.cryptomcgrath.pyrexia.thermostat.ThermostatViewModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="@dimen/top_padding"
        android:paddingBottom="@dimen/top_padding"
        android:background="@{model.isEnabled() ? @color/light_blue : @color/light_grey}">

        <TextView
            android:id="@+id/program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_padding"
            android:text="@{model.name}"
            android:textSize="20sp"
            android:textColor="@color/white"
            tools:text="Valve Bay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/sensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.sensorValue}"
            android:textSize="100sp"
            android:textColor="@color/white"
            android:enabled="@{model.isEnabled()}"
            tools:text="68°"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="@dimen/set_point_size"
            android:layout_height="@dimen/set_point_size"
            android:layout_marginEnd="@dimen/side_padding"
            android:src="@drawable/ic_arrow_up_48"
            android:onClick="@{()->model.onClickIncrease()}"
            android:enabled="@{model.isEnabled()}"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/set_point"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/set_point_size"
            android:layout_marginEnd="@dimen/side_padding"
            android:text="@{model.setPointText}"
            android:textSize="30sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:enabled="@{model.isEnabled()}"
            tools:text="68°"
            app:layout_constraintTop_toBottomOf="@id/up_arrow"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/set_to_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set_to"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:enabled="@{model.isEnabled()}"
            app:layout_constraintTop_toTopOf="@id/set_point"
            app:layout_constraintBottom_toBottomOf="@id/set_point"
            app:layout_constraintEnd_toStartOf="@id/set_point" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="@dimen/set_point_size"
            android:layout_height="@dimen/set_point_size"
            android:layout_marginEnd="@dimen/side_padding"
            android:src="@drawable/ic_arrow_down_48"
            android:onClick="@{()->model.onClickDecrease()}"
            android:enabled="@{model.isEnabled()}"
            app:layout_constraintTop_toBottomOf="@id/set_point"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/off_text"
            android:text="@string/off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/side_padding"
            android:textSize="18dp"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/enabled_switch"
            app:layout_constraintBottom_toBottomOf="@id/enabled_switch" />

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/enabled_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:checked="@={model.isEnabled()}"
            android:onCheckedChanged="@{(v,e) -> model.onEnabledChanged(v,e)}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/off_text" />

        <TextView
            android:id="@+id/mode_name"
            android:text="@{model.modeText}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            tools:text="HEAT"
            app:layout_constraintStart_toEndOf="@id/enabled_switch"
            app:layout_constraintTop_toTopOf="@id/enabled_switch"
            app:layout_constraintBottom_toBottomOf="@id/enabled_switch" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
