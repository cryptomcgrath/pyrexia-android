<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="model"
            type="com.cryptomcgrath.pyrexia.statlist.StatDiffableItem" />
        <import type="android.view.View" />

    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/background_frame"
            android:background="@{context.getColor(model.background)}"
            tools:background="@color/light_blue"
            android:padding="16dp"
            android:onClick="@{()->model.onClickStat()}"
            app:layout_constraintStart_toStartOf="@id/sensor_value"
            app:layout_constraintEnd_toEndOf="@id/sensor_value"
            app:layout_constraintTop_toTopOf="@id/program_name"
            app:layout_constraintBottom_toBottomOf="@id/sensor_value" />

        <TextView
            android:id="@+id/program_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.name}"
            android:textSize="14sp"
            android:textColor="@color/white"
            tools:text="Valve Bay"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/sensor_value"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/sensor_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{model.sensorValue}"
            android:textSize="50sp"
            android:textColor="@color/white"
            android:enabled="@{model.isEnabled()}"
            tools:text="68Â°"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
